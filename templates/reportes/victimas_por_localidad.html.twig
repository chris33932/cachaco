{% extends "reportes/baseRepo.html.twig" %}
{% block title %}Reportes víctimas{% endblock %}


{% block reporte %}
<div class="container">
    <div class="table table-responsive">
    <caption class="text-justify" > <h3>Distribución de víctimas por localidad</h3>  
      {{ fecha_desde | fechaCorta }} hasta {{ fecha_hasta | fechaCorta }}</caption>
        <table class="table table-hover">
            
            <thead>
                <tr>
                    <th>Nombre de localidad</th>
                    <th>Cantidad</th>
                
                </tr>
            </thead>
            <tbody>
                {% for fila in datos %}
                <tr>
                    <td>{{ fila.descripcion }}</td>
                    <td>{{ fila.cantidad  }}</td>
                
                </tr>
                {% else %}
                <tr><td>No hay resultados disponibles...</td></tr>
                {% endfor %}
            </tbody>
        </table>
      
    </div>
</div>
{% endblock %}
{% block body %}
    {% set path_excel = "" %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
<script>
    $(document).ready(function(){
        $('#imprimir').on('click', function(e){
            e.preventDefault();
            window.print();
        });

</script>
{% endblock %}