{% extends "reportes/baseRepo.html.twig" %}
{% block title %}Reportes femicidios{% endblock %}


{% block reporte %}
<div class="container">
    <div class="table table-responsive">
    <caption class="text-justify" > <h4>Informe sobre femicidios( Dept/Loc/GRcia/Zona/Espacio/Tipo de lugar/Acceso/Domicilio)</h4>  
      {{ fecha_desde | fechaCorta }} hasta {{ fecha_hasta | fechaCorta }}</caption>

                             <table class="table table-hover">
            
                                                        <thead style="background-color: #a4eaec;">
                                                            <tr>
                                                                <th>presAutor</th>
                                                                <th>victima</th>
                                                                <th>hecho</th>
                                                                <th>departamento</th>
                                                                <th>localidad</th>
                                                                <th>granRcia</th>  
                                                                <th>zonaOcurrencia</th>
                                                                <th>tipoEspOcurrencia</th>
                                                                <th>lugar</th>
                                                                <th>lugarOtro</th>
                                                                <th>tipoLugarOcurrencia</th>
                                                                <th>tipoAcceso</th>
                                                                <th>domicilio</th>
                                                                <th>domicilioOtro</th>
                                                                <th>tipoFemicidio</th>
                                                                <th>anio</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for fila in datos %}
                                                            <tr>
                                                                
                                                                <td>{{ fila.presAutor  }}</td>
                                                                <td>{{ fila.victima  }}</td>
                                                                <td>{{ fila.hecho  }}</td>
                                                                <td>{{ fila.departamento  }}</td>
                                                                <td>{{ fila.localidad  }}</td>
                                                                <td>{{ fila.granRcia  }}</td>    
                                                                <td>{{ fila.zonaOcurrencia  }}</td>                                                        
                                                                <td>{{ fila.tipoEspOcurrencia  }}</td>
                                                                <td>{{ fila.lugar  }}</td>
                                                                <td>{{ fila.lugarOtro  }}</td>
                                                                <td>{{ fila.tipoLugarOcurrencia  }}</td>
                                                                <td>{{ fila.tipoAcceso  }}</td>
                                                                <td>{{ fila.domicilio  }}</td>
                                                                <td>{{ fila.domicilioOtro  }}</td>
                                                                <td>{{ fila.tipoFemicidio  }}</td>
                                                                <td>{{ fila.anio  }}</td>

                                                            
                                                            </tr>
                                                            {% else %}
                                                            <tr><td>No hay resultados disponibles...</td></tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
       
      
    </div>
</div>
{% endblock %}
{% block body %}
    {% set path_excel = "" %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
<script>
    $(document).ready(function(){
        $('#imprimir').on('click', function(e){
            e.preventDefault();
            window.print();
        });

</script>
{% endblock %}